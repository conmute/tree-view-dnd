.tree-view
  position relative
  margin 0
  padding 0
  width 100%
  height 100%
  will-change: scroll-position
  background-color #f0f0f0
  will-change scroll-position
  overflow auto

.tv-node__content
  display block
  position relative
  border 0 none
  line-height 27px
  height 27px
  padding-left 41px
  font-size inherit
  will-change: transform
  box-sizing border-box
  user-select none
  border-left 5px solid transparent
  overflow hidden

.dragging
  background-color #efefff
  z-index 1000
  cursor grabbing
  cursor -moz-grabbing
  cursor -webkit-grabbing

.grabbable
  cursor move /* fallback if grab cursor is unsupported */
  cursor grab
  cursor -moz-grab
  cursor -webkit-grab
